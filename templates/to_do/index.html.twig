<body>
{% for message in app.session.flashBag.get('info') %}
<div style="color: blue ">
{{message}}
</div>
{% endfor %}

{% for message in app.session.flashbag.get('error') %}
<div style="color:red">
{{message}}
</div>
{% endfor  %}

{% for message in app.session.flashbag.get('success') %}
<div style="color:green">
{{message}}
</div>
{% endfor  %}




<h1>To do List </h1>
<ul class="list-group">
    
    {% for cle, element in app.session.get('tasks') %}
              </br> <li class="list-group-item">{{cle}} :</br>
               {{element}}</li>
    {% endfor %}
</ul>

    
